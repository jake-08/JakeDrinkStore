<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    </br>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%; padding-top:20px">
        <thead>
            <tr>
                <th width="15%">Name</th>
                <th width ="25%">Address</th>
                <th width="15%">City</th>
                <th width="15%">State</th>
                <th width="15%">Phone Number</th>
                <th width="15%">Edit / Delete</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

