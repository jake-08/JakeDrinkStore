@{
    ViewData["Title"] = "Company List";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>
    </div>
    </br>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%; padding-top:20px">
        <thead>
            <tr>
                <th width="20%">Company Name</th>
                <th width ="20%">Company Address</th>
                <th width="15%">Suburb</th>
                <th width="10%">State</th>
                <th width="10%">Postcode</th>
                <th width="15%">Phone Number</th>
                <th width="5%">Edit</th>
                <th width="5%">Delete</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}