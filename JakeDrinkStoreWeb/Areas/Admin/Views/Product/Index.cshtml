@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Drinks List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Drink
            </a>
        </div>
    </div>
    </br>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%; padding-top:20px">
        <thead>
            <tr>
                <th width="25%">Name</th>
                <th width="15%">Brand</th>
                <th width="10%">List Price</th>
                <th width="10%">Case Price</th>
                <th width="10%">Bulk Price</th>
                <th width="15%">Drink Type</th>
                <th width="15%">Edit/Delete</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}