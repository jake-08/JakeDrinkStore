@model Tag
@{
    ViewData["Title"] = "Edit Tag";
}


<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Tag</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDateTime"></label>
            <input type="date" asp-for="CreatedDateTime" class="form-control" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="CreatedDateTime" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
        <a asp-controller="Tag" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Back to List
        </a>
    </div>

</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}