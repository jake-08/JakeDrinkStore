@model DrinkType

<form method="post" asp-action="Delete">
    @*Add this hidden input because in delete fields are disabled*@
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Drink Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDateTime"></label>
            <input type ="date" asp-for="CreatedDateTime" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px">Delete</button>
        <a asp-controller="DrinkType" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Back to List
        </a>
    </div>

</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}