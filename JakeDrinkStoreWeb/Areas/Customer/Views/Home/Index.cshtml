@model IEnumerable<Product>
@{
    ViewData["Title"] = "Jake Drink Store - Home";
}

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <div class="text-center">
                            <img src="@product.ImageUrl" class="card-img rounded" />
                        </div>
                            <div class="card-body">
                                <p style="height:57px" class="card-title h5 text-primary">@product.Name</p>
                                <p class="text-warning">by <b>@product.Brand</b></p>
                                <p>Price: <b>$@product.ListPrice.ToString("0.00")</b> each</p>
                                <p>Bulk Price: <b>$@product.BulkCasePrice.ToString("0.00")</b> / case</p>
                                <a class="btn btn-primary form-control" asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id">Details</a>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>